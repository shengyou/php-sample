{
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4",
        "friendsofphp/php-cs-fixer": "^2.14",
        "phpro/grumphp": "^0.15.0",
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-style": [
            ".\\vendor\\bin\\phpcs.bat --standard=PSR2 src"
        ],
        "fix-style": [
            ".\\vendor\\bin\\phpcbf.bat --standard=PSR2 src"
        ]
    }
}
